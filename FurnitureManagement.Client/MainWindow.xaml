<Window x:Class="FurnitureManagement.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="家具城管理系统"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <!-- 定义网格行列 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 顶部导航栏 -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#2C3E50">
            <StackPanel Orientation="Horizontal" Margin="20,0,20,0" VerticalAlignment="Center">
                <!-- 系统标题 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="家具城管理系统" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,20,0"/>
                </StackPanel>
                
                <!-- 用户信息和退出按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0,0,15,0">
                        <TextBlock x:Name="txtUserName" FontSize="14" FontWeight="Medium" Foreground="White"/>
                        <TextBlock x:Name="txtUserRole" FontSize="12" Foreground="LightGray"/>
                    </StackPanel>
                    <Button Content="退出登录" FontSize="12" Padding="10,5" Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="1"
                            Click="btnLogout_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- 左侧菜单 -->
        <Grid Grid.Row="1" Grid.Column="0" Background="#34495E">
            <StackPanel Margin="0,0,0,0">
                <!-- 系统概览 -->
                <Button x:Name="btnSystemOverview" Content="系统概览" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#2C3E50" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnSystemOverview_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 库存管理 -->
                <Button x:Name="btnInventoryManage" Content="库存管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnInventoryManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 进货管理 -->
                <Button x:Name="btnPurchaseManage" Content="进货管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnPurchaseManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 销售管理 -->
                <Button x:Name="btnSalesManage" Content="销售管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnSalesManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 资金管理 -->
                <Button x:Name="btnFinanceManage" Content="资金管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnFinanceManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 统计报表 -->
                <Button x:Name="btnReportManage" Content="统计报表" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnReportManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 商品管理 -->
                <Button x:Name="btnProductManage" Content="商品管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnProductManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 分类管理 -->
                <Button x:Name="btnCategoryManage" Content="分类管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnCategoryManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 供应商管理 -->
                <Button x:Name="btnSupplierManage" Content="供应商管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnSupplierManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 仓库管理 -->
                <Button x:Name="btnWarehouseManage" Content="仓库管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnWarehouseManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 用户管理 -->
                <Button x:Name="btnUserManage" Content="用户管理" FontSize="14" Padding="20,15" Margin="0,0,0,0" HorizontalAlignment="Stretch"
                        Background="#34495E" Foreground="White" BorderBrush="Transparent" BorderThickness="0,0,2,0"
                        Click="btnUserManage_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A252F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#F5F5F5">
            <!-- 系统概览内容区域 -->
            <Grid x:Name="SystemOverviewGrid" Visibility="Visible">
                <StackPanel Margin="20,20,20,20" Background="White">
                    <TextBlock Text="系统概览" FontSize="24" FontWeight="Bold" Margin="20,20,0,30" Foreground="#333333"/>
                    
                    <!-- 欢迎信息 -->
                    <StackPanel Margin="20,0,20,30">
                        <TextBlock Text="欢迎使用家具城管理系统" FontSize="18" FontWeight="Medium" Margin="0,0,0,10" Foreground="#2C3E50"/>
                        <TextBlock Text="该系统提供库存管理、进货管理、销售管理、资金管理、统计报表等功能，帮助您高效管理家具城业务。" FontSize="14" Foreground="#666666"/>
                    </StackPanel>
                    
                    <!-- 功能模块概览 -->
                    <StackPanel Margin="20,0,20,30">
                        <TextBlock Text="功能模块" FontSize="16" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2C3E50"/>
                        
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <!-- 库存管理卡片 -->
                            <Border Width="200" Height="150" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">
                                    <TextBlock Text="库存管理" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                                    <TextBlock Text="管理家具库存信息" FontSize="14" Foreground="#666666" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 进货管理卡片 -->
                            <Border Width="200" Height="150" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">
                                    <TextBlock Text="进货管理" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                                    <TextBlock Text="管理家具进货流程" FontSize="14" Foreground="#666666" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 销售管理卡片 -->
                            <Border Width="200" Height="150" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">
                                    <TextBlock Text="销售管理" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                                    <TextBlock Text="管理家具销售业务" FontSize="14" Foreground="#666666" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 资金管理卡片 -->
                            <Border Width="200" Height="150" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">
                                    <TextBlock Text="资金管理" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                                    <TextBlock Text="管理财务资金流动" FontSize="14" Foreground="#666666" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 统计报表卡片 -->
                            <Border Width="200" Height="150" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">
                                    <TextBlock Text="统计报表" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                                    <TextBlock Text="生成业务统计报表" FontSize="14" Foreground="#666666" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 商品管理卡片 -->
                            <Border Width="200" Height="150" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,20,20">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10">
                                    <TextBlock Text="商品管理" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                                    <TextBlock Text="管理商品基本信息" FontSize="14" Foreground="#666666" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <!-- 库存管理内容区域 -->
            <Frame x:Name="InventoryManageFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
            
            <!-- 进货管理内容区域 -->
            <Grid x:Name="PurchaseManageGrid" Visibility="Collapsed">
                <StackPanel Margin="20,20,20,20" Background="White">
                    <TextBlock Text="进货管理" FontSize="24" FontWeight="Bold" Margin="20,20,0,30" Foreground="#333333"/>
                    <TextBlock Text="进货管理功能正在开发中..." FontSize="16" Margin="20,0,0,0" Foreground="#666666"/>
                </StackPanel>
            </Grid>
            
            <!-- 销售管理内容区域 -->
            <Grid x:Name="SalesManageGrid" Visibility="Collapsed">
                <StackPanel Margin="20,20,20,20" Background="White">
                    <TextBlock Text="销售管理" FontSize="24" FontWeight="Bold" Margin="20,20,0,30" Foreground="#333333"/>
                    <TextBlock Text="销售管理功能正在开发中..." FontSize="16" Margin="20,0,0,0" Foreground="#666666"/>
                </StackPanel>
            </Grid>
            
            <!-- 资金管理内容区域 -->
            <Grid x:Name="FinanceManageGrid" Visibility="Collapsed">
                <StackPanel Margin="20,20,20,20" Background="White">
                    <TextBlock Text="资金管理" FontSize="24" FontWeight="Bold" Margin="20,20,0,30" Foreground="#333333"/>
                    <TextBlock Text="资金管理功能正在开发中..." FontSize="16" Margin="20,0,0,0" Foreground="#666666"/>
                </StackPanel>
            </Grid>
            
            <!-- 统计报表内容区域 -->
            <Grid x:Name="ReportManageGrid" Visibility="Collapsed">
                <StackPanel Margin="20,20,20,20" Background="White">
                    <TextBlock Text="统计报表" FontSize="24" FontWeight="Bold" Margin="20,20,0,30" Foreground="#333333"/>
                    <TextBlock Text="统计报表功能正在开发中..." FontSize="16" Margin="20,0,0,0" Foreground="#666666"/>
                </StackPanel>
            </Grid>
            
            <!-- 商品管理内容区域 -->
            <Frame x:Name="ProductManageFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
            
            <!-- 分类管理内容区域 -->
            <Frame x:Name="CategoryManageFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
            
            <!-- 供应商管理内容区域 -->
            <Frame x:Name="SupplierManageFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
            
            <!-- 仓库管理内容区域 -->
            <Frame x:Name="WarehouseManageFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
            
            <!-- 用户管理内容区域 -->
            <Grid x:Name="UserManageGrid" Visibility="Collapsed">
                <!-- 用户管理界面 -->
                <StackPanel Margin="20,20,20,20" Background="White">
                    <TextBlock Text="用户管理" FontSize="24" FontWeight="Bold" Margin="20,20,0,30" Foreground="#333333"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
                        <Button x:Name="btnAddUser" Content="添加用户" FontSize="14" Padding="12,8" Background="#3498DB" Foreground="White"
                                BorderBrush="Transparent" BorderThickness="0" Click="btnAddUser_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 搜索框 -->
                    <StackPanel Orientation="Horizontal" Margin="20,0,20,20">
                        <TextBox x:Name="txtSearch" FontSize="14" Padding="12,10" Width="300" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button x:Name="btnSearch" Content="搜索" FontSize="14" Padding="12,8" Margin="10,0,0,0" Background="#3498DB" Foreground="White"
                                BorderBrush="Transparent" BorderThickness="0" Click="btnSearch_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- 用户列表 -->
                    <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" FontSize="14" CanUserAddRows="False" SelectionMode="Single" SelectionUnit="FullRow"
                              Margin="20,0,20,20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                              RowHeight="40" AlternatingRowBackground="#F9F9F9">
                        <!-- 数据网格样式 -->
                        <DataGrid.Style>
                            <Style TargetType="DataGrid">
                                <Setter Property="RowBackground" Value="White"/>
                                <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
                            </Style>
                        </DataGrid.Style>
                        
                        <!-- 列样式 -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Padding" Value="10,12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <!-- 行样式 -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E6F2FF"/>
                                        <Setter Property="Foreground" Value="#3498DB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        
                        <!-- 单元格样式 -->
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Padding" Value="10,0"/>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <!-- 列定义 -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="用户ID" Binding="{Binding UserId}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="用户名" Binding="{Binding Username}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="真实姓名" Binding="{Binding RealName}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="邮箱" Binding="{Binding Email}" Width="200" IsReadOnly="True"/>
                            <DataGridTextColumn Header="手机号" Binding="{Binding Phone}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="角色" Binding="{Binding Role}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="active">
                                                <Setter Property="Foreground" Value="#27AE60"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="inactive">
                                                <Setter Property="Foreground" Value="#95A5A6"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="150" IsReadOnly="True"/>
                            <DataGridTextColumn Header="最后登录" Binding="{Binding LastLogin, StringFormat=yyyy-MM-dd HH:mm}" Width="150" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="操作" Width="180" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                            <!-- 编辑按钮 -->
                                            <Button Content="编辑" FontSize="12" Padding="8,5" Margin="0,0,5,0" Background="#F39C12" Foreground="White"
                                                    BorderBrush="Transparent" BorderThickness="0" Click="btnEditUser_Click" Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E67E22"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <!-- 删除按钮 -->
                                            <Button Content="删除" FontSize="12" Padding="8,5" Margin="0,0,5,0" Background="#E74C3C" Foreground="White"
                                                    BorderBrush="Transparent" BorderThickness="0" Click="btnDeleteUser_Click" Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#C0392B"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <!-- 状态切换按钮 -->
                                            <Button x:Name="btnToggleStatus" Content="" FontSize="12" Padding="8,5" Margin="0,0,0,0"
                                                    Background="#95A5A6" Foreground="White"
                                                    BorderBrush="Transparent" BorderThickness="0" Click="btnToggleStatus_Click" Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="active">
                                                                <Setter Property="Content" Value="禁用"/>
                                                                <Setter Property="Background" Value="#95A5A6"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="inactive">
                                                                <Setter Property="Content" Value="启用"/>
