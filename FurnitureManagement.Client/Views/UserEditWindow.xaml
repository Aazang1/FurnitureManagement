<Window x:Class="FurnitureManagement.Client.Views.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="用户编辑"
        Width="550"
        Height="920"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <!-- 主容器 -->
        <StackPanel Margin="20,20,20,20">
            <!-- 卡片容器 -->
            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                <StackPanel Margin="30,30,30,30">
                    <!-- 标题 -->
                    <TextBlock x:Name="txtTitle" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#333333"/>
                    
                    <!-- 表单区域 -->
                    <StackPanel>
                        <!-- 用户名 -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="用户名" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <TextBox x:Name="txtUsername" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- 真实姓名 -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="真实姓名" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <TextBox x:Name="txtRealName" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- 邮箱 -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="邮箱" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <TextBox x:Name="txtEmail" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- 手机号 -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="手机号" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <TextBox x:Name="txtPhone" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                        
                        <!-- 角色 -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="角色" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <ComboBox x:Name="cmbRole" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <ComboBoxItem Content="管理员 (Admin)" Tag="Admin"/>
                                <ComboBoxItem Content="经理 (Manager)" Tag="Manager"/>
                                <ComboBoxItem Content="普通用户 (User)" Tag="User"/>
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 状态 -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="状态" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <ComboBox x:Name="cmbStatus" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <ComboBoxItem Content="启用 (active)" Tag="active"/>
                                <ComboBoxItem Content="禁用 (inactive)" Tag="inactive"/>
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 密码区域（仅新建用户时显示） -->
                        <StackPanel x:Name="PasswordStack" Margin="0,0,0,20">
                            <TextBlock Text="密码" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
                            <PasswordBox x:Name="txtPassword" FontSize="14" Padding="12,10" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                                <PasswordBox.Style>
                                    <Style TargetType="PasswordBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#409EFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </PasswordBox.Style>
                            </PasswordBox>
                        </StackPanel>
                        
                        <!-- 错误信息 -->
                        <TextBlock x:Name="txtError" FontSize="12" Margin="0,10,0,20" Foreground="Red" HorizontalAlignment="Center"/>
                        
                        <!-- 按钮区域 -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                            <Button x:Name="btnCancel" Content="取消" FontSize="14" FontWeight="Bold" Margin="0,0,15,0" Padding="15,10" Width="150" Height="45"
                                    Background="#F5F5F5" Foreground="#606266" BorderBrush="#DCDFE6" BorderThickness="1"
                                    Click="btnCancel_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E9E9EB"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnSave" Content="保存" FontSize="14" FontWeight="Bold" Margin="15,0,0,0" Padding="15,10" Width="150" Height="45"
                                    Background="#409EFF" Foreground="White" BorderBrush="Transparent" BorderThickness="0"
                                    Click="btnSave_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#66B1FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>