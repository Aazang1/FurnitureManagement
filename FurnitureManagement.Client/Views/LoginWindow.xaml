<Window x:Class="FurnitureManagement.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="酒店管理系统 - 登录"
        Width="800"
        Height="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- 左侧背景区域 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧渐变背景 -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF6B73FF" Offset="0"/>
                    <GradientStop Color="#FF0000FF" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
                <TextBlock Text="家具管理系统" FontSize="36" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                <TextBlock Text="高效管理，优质服务" FontSize="18" Foreground="White" TextAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- 右侧登录表单 -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel Margin="40,60,40,40">
                <TextBlock Text="欢迎登录" FontSize="28" FontWeight="Bold" Margin="0,0,0,40"/>
                
                <!-- 用户名 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="用户名" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtUsername" FontSize="16" Padding="15,12" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#409EFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
                
                <!-- 密码 -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="密码" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                    <PasswordBox x:Name="txtPassword" FontSize="16" Padding="15,12" Height="45" BorderBrush="#E0E0E0" BorderThickness="1">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#409EFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>
                </StackPanel>
                
                <!-- 错误信息 -->
                <TextBlock x:Name="txtError" FontSize="12" Margin="0,10,0,0" Foreground="Red" HorizontalAlignment="Left"/>
                
                <!-- 登录按钮 -->
                <Button x:Name="btnLogin" Content="登录" FontSize="16" FontWeight="Bold" Margin="0,20,0,0" Height="45"
                        Background="#409EFF" Foreground="White" BorderBrush="Transparent" HorizontalAlignment="Stretch"
                        Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66B1FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- 注册链接 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock Text="没有账号？" FontSize="14"/>
                    <Button x:Name="btnRegister" Content="立即注册" FontSize="14" Margin="5,0,0,0" 
                            Background="Transparent" BorderBrush="Transparent" Foreground="#409EFF" Cursor="Hand"
                            Click="btnRegister_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#66B1FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>