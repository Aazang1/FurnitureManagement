<Window x:Class="FurnitureManagement.Client.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改密码" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="修改密码"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#2C3E50"/>

        <!-- 原密码 -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="原密码" 
                       FontSize="14" 
                       Foreground="#34495E"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtOldPassword"
                        Height="40"
                        FontSize="14"
                        Padding="10"
                        Background="White"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"/>
        </StackPanel>

        <!-- 新密码 -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="新密码" 
                       FontSize="14" 
                       Foreground="#34495E"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtNewPassword"
                        Height="40"
                        FontSize="14"
                        Padding="10"
                        Background="White"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"/>
        </StackPanel>

        <!-- 确认新密码 -->
        <StackPanel Grid.Row="6">
            <TextBlock Text="确认新密码" 
                       FontSize="14" 
                       Foreground="#34495E"
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword"
                        Height="40"
                        FontSize="14"
                        Padding="10"
                        Background="White"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1"/>
        </StackPanel>

        <!-- 错误提示 -->
        <TextBlock Grid.Row="8" 
                   x:Name="txtError"
                   Foreground="Red"
                   FontSize="12"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>

        <!-- 按钮 -->
        <StackPanel Grid.Row="10" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="btnConfirm"
                    Content="确认修改"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnConfirm_Click"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnCancel"
                    Content="取消"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnCancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#95A5A6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
