<Page x:Class="FurnitureManagement.Client.Views.SupplierManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FurnitureManagement.Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="供应商管理">
    <Grid Background="#F5F5F5">
        <StackPanel Margin="20">
            <!-- 标题和操作按钮 -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="供应商管理" FontSize="24" FontWeight="Bold" Foreground="#333333"/>
                <Button Grid.Column="1" Content="添加供应商" Width="120" Height="35" Background="#2ECC71" Foreground="White" 
                        BorderBrush="Transparent" Click="btnAddSupplier_Click" HorizontalAlignment="Right">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#27AE60"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- 搜索和筛选区域 -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 搜索框 -->
                <TextBox x:Name="txtSearch" Width="Auto" Height="35" Padding="10" VerticalContentAlignment="Center" Grid.Column="0" 
                         KeyUp="txtSearch_KeyUp" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498DB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <!-- 搜索按钮 -->
                <Button Content="搜索" Width="80" Height="35" Background="#3498DB" Foreground="White" 
                        BorderBrush="Transparent" Click="btnSearch_Click" Grid.Column="1" Margin="10,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- 清除筛选按钮 -->
                <Button Content="清除筛选" Grid.Column="2" Width="80" Height="35" Background="#95A5A6" Foreground="White" 
                        BorderBrush="Transparent" Click="btnClearFilter_Click" Margin="10,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- 统计信息区域 -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 总供应商数 -->
                <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="总供应商数" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtTotalSuppliers" Text="0" FontSize="24" FontWeight="Bold" Foreground="#3498DB"/>
                    </StackPanel>
                </Border>
                
                <!-- 活跃供应商 -->
                <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="活跃供应商" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtActiveSuppliers" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2ECC71"/>
                    </StackPanel>
                </Border>
                
                <!-- 本月新增 -->
                <Border Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="本月新增" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtMonthlyNew" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F39C12"/>
                    </StackPanel>
                </Border>
                
                <!-- 搜索结果 -->
                <Border Grid.Column="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="搜索结果" FontSize="12" Foreground="#666666" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtSearchResults" Text="0" FontSize="24" FontWeight="Bold" Foreground="#9B59B6"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- 供应商列表 -->
            <DataGrid x:Name="dgSuppliers" AutoGenerateColumns="False" CanUserAddRows="False" 
                      SelectionMode="Single" SelectionUnit="FullRow" Background="White"
                      BorderBrush="#E0E0E0" BorderThickness="1" RowHeight="40">
                <!-- 列样式 -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F5F5F5"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <!-- 行样式 -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F2FF"/>
                                <Setter Property="Foreground" Value="#3498DB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <!-- 单元格样式 -->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.CellStyle>
                
                <!-- 列定义 -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="供应商ID" Binding="{Binding SupplierId}" Width="80" IsReadOnly="True"/>
                    <DataGridTextColumn Header="供应商名称" Binding="{Binding SupplierName}" Width="150" IsReadOnly="True"/>
                    <DataGridTextColumn Header="联系人" Binding="{Binding ContactPerson}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="电话" Binding="{Binding Phone}" Width="120" IsReadOnly="True"/>
                    <DataGridTextColumn Header="地址" Binding="{Binding Address}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" Width="150" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="操作" Width="150" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- 编辑按钮 -->
                                    <Button Content="编辑" Width="60" Height="28" Background="#F39C12" Foreground="White" 
                                            BorderBrush="Transparent" Click="btnEditSupplier_Click" Tag="{Binding}" Margin="0,0,5,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E67E22"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <!-- 删除按钮 -->
                                    <Button Content="删除" Width="60" Height="28" Background="#E74C3C" Foreground="White" 
                                            BorderBrush="Transparent" Click="btnDeleteSupplier_Click" Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>