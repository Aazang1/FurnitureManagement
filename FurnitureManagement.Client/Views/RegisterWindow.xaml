<Window x:Class="FurnitureManagement.Client.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="酒店管理系统 - 注册"
        Width="450"
        Height="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6B73FF" Offset="0"/>
                <GradientStop Color="#FF0000FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border Background="White" CornerRadius="10" Margin="50,50,50,50" Padding="20">
            <StackPanel>
                <TextBlock Text="注册账号" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#FF0000FF"/>
                
                <!-- 用户名 -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="用户名" FontSize="14" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox x:Name="txtUsername" FontSize="14" Padding="10" BorderBrush="#FFD1D1D1" BorderThickness="1" Height="35"/>
                </StackPanel>
                
                <!-- 密码 -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="密码" FontSize="14" Margin="0,0,0,5" FontWeight="Medium"/>
                    <PasswordBox x:Name="txtPassword" FontSize="14" Padding="10" BorderBrush="#FFD1D1D1" BorderThickness="1" Height="35"/>
                </StackPanel>
                
                <!-- 邮箱 -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="邮箱" FontSize="14" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox x:Name="txtEmail" FontSize="14" Padding="10" BorderBrush="#FFD1D1D1" BorderThickness="1" Height="35"/>
                </StackPanel>
                
                <!-- 手机号 -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="手机号（可选）" FontSize="14" Margin="0,0,0,5" FontWeight="Medium"/>
                    <TextBox x:Name="txtPhone" FontSize="14" Padding="10" BorderBrush="#FFD1D1D1" BorderThickness="1" Height="35"/>
                </StackPanel>
                
                <!-- 错误信息 -->
                <TextBlock x:Name="txtError" FontSize="12" Margin="0,10,0,0" Foreground="Red" HorizontalAlignment="Center"/>
                
                <!-- 按钮区域 -->
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button x:Name="btnCancel" Content="取消" FontSize="14" FontWeight="Bold" Margin="0,0,15,0" Padding="15,10" Width="100"
                            Background="#FFE0E0E0" Foreground="#333333" BorderBrush="Transparent"
                            Click="btnCancel_Click"/>
                    <Button x:Name="btnRegister" Content="注册" FontSize="14" FontWeight="Bold" Margin="15,0,0,0" Padding="15,10" Width="100"
                            Background="#FF0000FF" Foreground="White" BorderBrush="Transparent"
                            Click="btnRegister_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>